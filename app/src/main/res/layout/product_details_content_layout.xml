<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_product_details"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:cardElevation="2dp"
                app:contentPadding="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/close_gray"
                        android:padding="12dp"
                        />
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="160dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center_horizontal"
                        android:transitionName="pager_image"
                        >

                    </androidx.viewpager.widget.ViewPager>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        app:tabGravity="fill"
                        app:tabMode="scrollable"
                        app:tabIndicatorHeight="0dp"
                        app:tabMinWidth="15dp"
                        app:tabMaxWidth="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_horizontal"
                        app:tabBackground="@drawable/viewpager_tab_indicator"
                        >

                    </com.google.android.material.tabs.TabLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_price_before_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/gray3"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        />
                    <TextView
                        android:id="@+id/tv_price_after_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_similar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:contentPadding="8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="@string/similar_products"
                        android:layout_marginBottom="5dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray3"
                        android:layout_marginBottom="8dp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recViewSimilarProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/map_man_box"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/image_increment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/add_bg_gradient"
                    android:src="@drawable/add"
                    android:padding="8dp"
                    android:layout_alignParentStart="true"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/tv_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image_increment"
                    android:layout_toStartOf="@+id/image_decrement"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="1"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:id="@+id/image_decrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/minus_bg"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RtlCompat"
                    android:src="@drawable/white_minus"
                    android:padding="7dp"
                    />
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_add_cart_bg"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/add_to_cart"
                />
        </FrameLayout>



    </LinearLayout>

</RelativeLayout>
