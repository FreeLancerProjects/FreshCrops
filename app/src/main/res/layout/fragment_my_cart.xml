<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/image_basket"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/basket"
                android:padding="5dp"

                />
            <TextView
                android:id="@+id/tv_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="13sp"
                android:text="@string/review_purchases"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_arrow1"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_gray_right"
            android:padding="3dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/image_car"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/car_address_unselected"
                android:padding="5dp"

                />
            <TextView
                android:id="@+id/tv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="13sp"
                android:text="@string/delivery_and_address"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_arrow2"

            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_gray_right"
            android:padding="3dp"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/image_payment"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/payment_unselected"
                android:padding="5dp"

                />
            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="13sp"
                android:text="@string/payment_and_confirmation"
                />
        </LinearLayout>
    </LinearLayout>
   <FrameLayout
       android:id="@+id/fragment_my_cart_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="5dp"
       android:background="@color/gray0"
       >

   </FrameLayout>
</LinearLayout>