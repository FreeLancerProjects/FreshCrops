<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_left"
                    android:padding="8dp"
                    android:clickable="false"
                    android:longClickable="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/edt_search_bg"
                android:layoutDirection="ltr"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="RtlCompat,UnusedAttribute"
                android:weightSum="1"
                >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".18"
                    android:layout_height="match_parent"
                    android:background="@drawable/edt_search_bg_cover"
                    android:clickable="false"
                    android:longClickable="false"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/search"
                        android:clickable="false"
                        android:longClickable="false"
                        />

                </FrameLayout>

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:hint="@string/search"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:scrollHorizontally="true"
                    />

                <ImageView
                    android:id="@+id/image_cancel"
                    android:layout_width="0dp"
                    android:layout_weight=".12"
                    android:layout_height="30dp"
                    android:src="@drawable/close_gray"
                    android:padding="6dp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="match_parent"

            >
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:visibility="visible"
                android:padding="3dp"
                />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="@string/search2"
                android:background="@color/transparent"
                android:visibility="gone"
                />


        </FrameLayout>
    </LinearLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expand_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:el_expanded="false"
        app:el_parallax=".5"
        app:el_duration="500"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/recent_search"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewRecentSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                >

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
    <TextView
        android:id="@+id/tv_recent_visited"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:text="@string/recently_visited"
        android:visibility="gone"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"

        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/progBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="visible"

            />
        <TextView
            android:id="@+id/tv_no_searched_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/no_products_searched_for_recently"
            android:gravity="center"
            />
    </FrameLayout>
</LinearLayout>